<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerta de Mudança de Bateria"
        android:id="@+id/cbBattery"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:onClick="updateReceivers" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerta de Mudança de estado do Modo Avião"
        android:id="@+id/cbAirplane"
        android:layout_below="@+id/cbBattery"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignEnd="@+id/cbBattery"
        android:onClick="updateReceivers" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerta de Carregador Conectado"
        android:id="@+id/cbChargerOn"
        android:layout_below="@+id/cbAirplane"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:onClick="updateReceivers" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerta de Carregador Desconectado"
        android:id="@+id/cbChargerOff"
        android:layout_below="@+id/cbChargerOn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:onClick="updateReceivers" />
</RelativeLayout>
